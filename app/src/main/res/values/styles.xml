<resources>

    <style name="Widget.Theme.TakeNote.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/mi_gray</item>
    </style>


    <style name="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="diaryRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/black</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="mySearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="searchHintIcon">@android:color/transparent</item>
    </style>

</resources>