<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/ivDeleteLabel2"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_delete_24"
        android:contentDescription="Delete Note" />

    <ImageView
        android:id="@+id/ivViewLabel2"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_label_filled_24"
        android:contentDescription="Label Icon" />

    <TextView
        android:id="@+id/tvLabelTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:gravity="center_vertical"
        android:text="@string/title"
        android:textSize="18sp" />

    <EditText
        android:visibility="gone"
        android:backgroundTint="@color/mi_gray"
        android:id="@+id/etLabelTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="45dp"
        android:maxLines="1"
        android:imeOptions="actionNone"
        android:layout_marginEnd="45dp" />

    <ImageView
        android:id="@+id/ivSaveLabel2"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:contentDescription="Save Note"
        android:visibility="gone"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_baseline_done_black" />

    <ImageView
        android:id="@+id/ivEditLabel2"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:contentDescription="EditNote"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_gravity="top|end"/>

</FrameLayout>